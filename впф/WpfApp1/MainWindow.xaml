<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Интегрированное управление" Height="520" Width="980">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#EEE" Padding="10">
            <TextBlock VerticalAlignment="Center" Text="{Binding HeaderText}" />
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Background="#F6F6F6" Padding="10">
                <TextBlock Text="Меню" FontWeight="Bold" Margin="0,0,0,10"/>

                <Button Content="Продукция" Margin="0,0,0,6" Command="{Binding OpenProductsCommand}"/>
                <Button Content="Материалы" Margin="0,0,0,6" Command="{Binding OpenMaterialsCommand}"/>
                <Button Content="Поставщики" Margin="0,0,0,6" Command="{Binding OpenSuppliersCommand}"/>

                <Separator Margin="0,10,0,10"/>

                <Button Content="Производственные заказы" Margin="0,0,0,6"
                        Command="{Binding OpenProductionOrdersCommand}"/>

                <Button Content="Остатки на складах" Margin="0,0,0,6"
                        Command="{Binding OpenStockCommand}"/>

                <Button Content="Качество / Дефекты" Margin="0,0,0,6"
                        Command="{Binding OpenQualityCommand}"/>
            </StackPanel>

            <Border Grid.Column="1" Padding="10">
                <ContentControl Content="{Binding CurrentViewModel}" />
            </Border>
        </Grid>
    </Grid>
</Window>
