<Application x:Class="WpfApp1.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WpfApp1.ViewModels"
             xmlns:views="clr-namespace:WpfApp1.Views"
             StartupUri="Views/LoginWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type vm:ProductsViewModel}">
            <views:ProductsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:MaterialsViewModel}">
            <views:MaterialsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SuppliersViewModel}">
            <views:SuppliersView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ProductionOrdersViewModel}">
            <views:ProductionOrdersView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:StockViewModel}">
            <views:StockView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:QualityViewModel}">
            <views:QualityView/>
        </DataTemplate>
    </Application.Resources>
</Application>
