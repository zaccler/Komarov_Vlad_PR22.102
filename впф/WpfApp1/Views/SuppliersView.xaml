<UserControl x:Class="WpfApp1.Views.SuppliersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Обновить" Width="90" Margin="0,0,6,0" Command="{Binding LoadCommand}"/>
            <Button Content="Добавить" Width="90" Margin="0,0,6,0" Command="{Binding AddCommand}"/>
            <Button Content="Удалить" Width="90" Margin="0,0,6,0" Command="{Binding DeleteCommand}"/>
            <Button Content="Сохранить" Width="110" Command="{Binding SaveCommand}"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <DataGrid Grid.Column="0" ItemsSource="{Binding Items}" SelectedItem="{Binding Selected}"
                      AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding SupplierId}" Width="60"/>
                    <DataGridTextColumn Header="ИНН" Binding="{Binding Inn}" Width="120"/>
                    <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Рейтинг" Binding="{Binding Rating}" Width="80"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                <TextBlock Text="Карточка" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock Text="ИНН"/><TextBox Text="{Binding Selected.Inn}" Margin="0,4,0,10"/>
                <TextBlock Text="Название"/><TextBox Text="{Binding Selected.Name}" Margin="0,4,0,10"/>
                <TextBlock Text="Контакты"/><TextBox Text="{Binding Selected.Contacts}" Margin="0,4,0,10"/>
                <TextBlock Text="Рейтинг (1..5)"/><TextBox Text="{Binding Selected.Rating}" Margin="0,4,0,10"/>
                <TextBlock Text="Условия оплаты"/><TextBox Text="{Binding Selected.PayTerms}" Margin="0,4,0,10"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
