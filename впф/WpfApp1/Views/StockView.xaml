<UserControl x:Class="WpfApp1.Views.StockView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Content="Обновить" Width="90" Margin="0,0,0,10" Command="{Binding LoadCommand}"/>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Items}" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding StockBalanceId}" Width="60"/>
                <DataGridTextColumn Header="WarehouseId" Binding="{Binding WarehouseId}" Width="100"/>
                <DataGridTextColumn Header="MaterialId" Binding="{Binding MaterialId}" Width="90"/>
                <DataGridTextColumn Header="Qty" Binding="{Binding Qty}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
