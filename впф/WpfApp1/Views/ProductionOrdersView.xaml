<UserControl x:Class="WpfApp1.Views.ProductionOrdersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Обновить" Width="90" Margin="0,0,6,0" Command="{Binding LoadCommand}"/>
            <Button Content="Добавить" Width="90" Margin="0,0,6,0" Command="{Binding AddCommand}"/>
            <Button Content="Сохранить" Width="110" Margin="0,0,6,0" Command="{Binding SaveCommand}"/>
            <Button Content="Сгенерировать этапы" Width="160" Command="{Binding GenerateStagesCommand}"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <DataGrid Grid.Column="0" ItemsSource="{Binding Orders}" SelectedItem="{Binding SelectedOrder}"
                      AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding ProductionOrderId}" Width="60"/>
                    <DataGridTextColumn Header="ClientId" Binding="{Binding ClientId}" Width="80"/>
                    <DataGridTextColumn Header="ProductId" Binding="{Binding ProductId}" Width="80"/>
                    <DataGridTextColumn Header="Кол-во" Binding="{Binding Qty}" Width="80"/>
                    <DataGridTextColumn Header="Приоритет" Binding="{Binding Priority}" Width="100"/>
                    <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="140"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                <TextBlock Text="Этапы заказа" FontWeight="Bold" Margin="0,0,0,10"/>
                <DataGrid ItemsSource="{Binding Stages}" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Seq" Binding="{Binding SeqNo}" Width="60"/>
                        <DataGridTextColumn Header="Тип" Binding="{Binding StageType}" Width="*"/>
                        <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
