<UserControl x:Class="WpfApp1.Views.ProductsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Обновить" Width="90" Margin="0,0,6,0" Command="{Binding LoadCommand}"/>
            <Button Content="Добавить" Width="90" Margin="0,0,6,0" Command="{Binding AddCommand}"/>
            <Button Content="Удалить" Width="90" Margin="0,0,6,0" Command="{Binding DeleteCommand}"/>
            <Button Content="Сохранить" Width="110" Command="{Binding SaveCommand}"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <DataGrid Grid.Column="0" ItemsSource="{Binding Items}" SelectedItem="{Binding Selected}"
                      AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding ProductId}" Width="60"/>
                    <DataGridTextColumn Header="Артикул" Binding="{Binding Article}" Width="*"/>
                    <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                <TextBlock Text="Карточка" FontWeight="Bold" Margin="0,0,0,10"/>

                <TextBlock Text="Артикул"/>
                <TextBox Text="{Binding Selected.Article, UpdateSourceTrigger=PropertyChanged}" Margin="0,4,0,10"/>

                <TextBlock Text="Название"/>
                <TextBox Text="{Binding Selected.Name, UpdateSourceTrigger=PropertyChanged}" Margin="0,4,0,10"/>

                <TextBlock Text="Категория"/>
                <TextBox Text="{Binding Selected.Category, UpdateSourceTrigger=PropertyChanged}" Margin="0,4,0,10"/>

                <TextBlock Text="Ед. изм."/>
                <TextBox Text="{Binding Selected.Unit, UpdateSourceTrigger=PropertyChanged}" Margin="0,4,0,10"/>

                <TextBlock Text="Статус (active/discontinued)"/>
                <TextBox Text="{Binding Selected.Status, UpdateSourceTrigger=PropertyChanged}" Margin="0,4,0,10"/>

                <TextBlock Text="Описание"/>
                <TextBox Text="{Binding Selected.Description, UpdateSourceTrigger=PropertyChanged}"
                         AcceptsReturn="True" Height="80"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
